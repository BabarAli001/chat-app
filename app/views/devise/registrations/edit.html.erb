<div class="card">
  <h5 class="card-header">Edit Profile</h5>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group mb-3">
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="actions mb-3">
        <%= f.submit "Update", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <h5 class="card-title">Cancel my account</h5>

    <p>This action is irreversible. All your messages and chat rooms will be pemanently deleted.
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo: false }, method: :delete, class: 'btn btn-danger' %></p>

    <%= link_to "Back", :back %>
  </div>
</div>
